# EditorConfig is awesome: https://EditorConfig.org

root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 2

[*.md]
trim_trailing_whitespace = false
max_line_length = 80

[*.{bat,cmd}]
end_of_line = crlf

[*.{yml,yaml}]
indent_size = 2

[*.json]
indent_size = 2

[*.{js,mjs,cjs,ts,tsx}]
indent_size = 2

[*.{py}]
indent_size = 4

[*.{sh,bash}]
indent_size = 2
