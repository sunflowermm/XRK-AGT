{
  "compilerOptions": {
    "target": "ES2024",
    "module": "ESNext",
    "lib": ["ES2024"],
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "allowJs": true,
    "checkJs": true,
    "noEmit": true,
    "strict": false,
    "noFallthroughCasesInSwitch": true,
    "baseUrl": ".",
    "paths": {
      "#utils/*": ["./src/utils/*"],
      "#core/*": ["./core/*"],
      "#config/*": ["./config/*"],
      "#data/*": ["./data/*"],
      "#renderers/*": ["./src/renderers/*"],
      "#modules/*": ["./src/modules/*"],
      "#infrastructure/*": ["./src/infrastructure/*"],
      "#factory/*": ["./src/factory/*"],
      "#oicq": ["./src/modules/oicq/index.js"]
    },
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "isolatedModules": true
  },
  "include": ["src/**/*", "core/**/*", "*.js", "*.mjs", "*.cjs", "global.d.ts"],
  "exclude": ["node_modules", "dist", "build", "logs", "data", "trash", "coverage", "**/*.test.js", "**/*.spec.js"]
}
